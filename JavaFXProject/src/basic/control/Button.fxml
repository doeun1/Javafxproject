

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.lang.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>



<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	prefHeight="150.0" prefWidth="420.0"
	fx:controller="basic.control.ButtonController">
	<padding>
		<Insets top="10" right="10" bottom="10" left="10" />

	</padding>

	<center>
		<HBox  alignment="CENTER" prefHeight="100.0" prefWidth="400.0"
			spacing="10">
			<children>
				<VBox prefHeight="100.0" prefWidth="100.0" spacing="20.0"
					alignment="CENTER_LEFT">
					
					<children>
						<CheckBox fx:id="chk1" text="안경" />
						<CheckBox fx:id="chk2" text="모자" />
					</children>
				</VBox>

				<ImageView fx:id="checkImageView" fitWidth="100.0"
					preserveRatio="true">
					<image>
						<Image url="@/basic/images/geek.gif"/></image>
				</ImageView>

				<Separator orientation="VERTICAL" prefHeight="100.0" />
						<VBox prefHeight="100.0" prefWidth="150" spacing="20.0"
							alignment="CENTER_LEFT">
							<fx:define>
								<ToggleGroup fx:id="group" />
							</fx:define>
							<children>
								<RadioButton fx:id="red1" text="BubbleChart"
									userData="BubbleChart" toggleGroup="$group" />
								<RadioButton fx:id="red2" text="BarChart"
									userData="BarChart" toggleGroup="$group" selected="true" />
								<RadioButton fx:id="red3" text="AreaChart"
									userData="AreaChart" toggleGroup="$group" />

							</children>
						</VBox>
						<ImageView fx:id="radioImageView" fitWidth="100.0"
							preserveRatio="true">
							<image>
								<Image url="@/basic/images/BarChart.png" />
							</image>
						</ImageView>
			</children>
		</HBox>

	</center>

	<bottom>
		<Button fx:id="btnExit" BorderPane.alignment="CENTER"
			>

			<graphic>
				<ImageView>
					<Image url="@/basic/images/exit.png" />
				</ImageView>
			</graphic>
			<BorderPane.margin>
				<Insets top="20.0" />
			</BorderPane.margin>
		</Button>
	</bottom>
</BorderPane>

